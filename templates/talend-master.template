            "Type": "String",
            "Default": "EdwardOst/quickstart-repo"
        },
        "GitUser": {
            "Description": "Git user.",
            "Type": "String",
            "Default": "EdwardOst"
        },
        "GitPassword": {
            "Description": "Git password.",
            "Type": "String",
            "NoEcho": "true"
